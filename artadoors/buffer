Dev:

version: '3.8'

services:
  web:
    build: .
    container_name: django_app
    command: gunicorn artadoors.wsgi:application -b 0.0.0.0:8000 --workers 3 --timeout 120 --log-level debug
    volumes:
      - .:/code
    environment:
      - DJANGO_SETTINGS_MODULE=artadoors.settings.dev  # Используем dev-настройки
    ports:
      - "8000:8000"


Prod:

services:
  web:
    build: .
    container_name: django_app
    command: gunicorn artadoors.wsgi:application -b 0.0.0.0:8000 --workers 3 --timeout 120
    volumes:
      - .:/code
      - static_volume:/code/static
      - media_volume:/code/media
    ports:
      - "8000:8000"
    environment:
      - DJANGO_SETTINGS_MODULE=artadoors.settings.prod

  nginx:
    image: nginx:latest
    container_name: nginx_proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
      - static_volume:/code/static
      - media_volume:/code/media
    depends_on:
      - web

volumes:
  static_volume:
  media_volume:
